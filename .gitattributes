# Set default behavior to automatically normalize line endings
* text=auto

# Force Unix line endings for shell scripts
*.sh text eol=lf

# Force Unix line endings for Python files
*.py text eol=lf

# Force Unix line endings for YAML files
*.yaml text eol=lf
*.yml text eol=lf

# Force Unix line endings for configuration files that might be used on Linux
Dockerfile text eol=lf
requirements.txt text eol=lf
*.cfg text eol=lf
*.conf text eol=lf
*.ini text eol=lf

# Force Windows line endings for Windows-specific files
*.bat text eol=crlf
*.cmd text eol=crlf

# Git LFS files (keep existing)
*.gz filter=lfs diff=lfs merge=lfs -text
*.pickle filter=lfs diff=lfs merge=lfs -text

# Binary files should not be normalized
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pdf binary
*.tar binary
*.exe binary
*.dll binary
*.so binary
*.pth binary
*.pkl binary
*.npy binary
*.npz binary
